{
  "name": "ordones",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "database": "pnpm --filter @ordones/database --",
    "api": "pnpm --filter @ordones/api --",
    "web": "pnpm --filter @ordones/web --",
    "codegen": "pnpm --filter @ordones/codegen --"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "tsx": "^4.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.4.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
